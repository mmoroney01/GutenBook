
<% @books.each do |book| %>
  <div id="cover-art-and-text-scroll-bar-and-book-info">

    <div id="cover-art-and-book-info">
      <div id="cover-art"><%= image_tag book.cover_art %></div>
      <div id="book-info">
        <div id="title"><%= book.title %></div>
        <div id="author"><%= book.author %></div>
        <div id="contribution-date"><%= "Contributed on " + book.release_date.strftime("%m-%d-%Y").to_s %></div><br>
        <div id="download-buttons">
          <div id="kindle-download-button"><button type="button">Kindle Download</button></div>
          <div id="txt-file-download-button"><button type="button">TXT Download</button></div>
        </div>
      </div>
    </div>
    <div id="text-scroll-bar"><%= book.sample_text %></div>

  </div>
<% end %>